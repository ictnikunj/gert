{
  "name": "sisi/es-content-search",
  "description": "Content Search mit Elasticsearch",
  "type": "shopware-platform-plugin",
  "license": "proprietary",
  "version": "v2.1.0",
  "authors": [
    {
      "name": "signundsinn GmbH",
      "homepage": "https://www.signundsinn.de",
      "role": "Manufacturer"
    }
  ],

  "require": {
    "shopware/core": "~6.3",
    "shopware/storefront": "~6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.1",
    "phpstan/phpstan": "^0.12.5",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "extra": {
    "shopware-plugin-class": "Sisi\\SisiEsContentSearch6\\SisiEsContentSearch6",
    "plugin-icon": "src/Resources/config/plugin.png",
    "copyright": "(c) by signundsinn GmbH",
    "label": {
      "de-DE": "Content Search mit Elasticsearch",
      "en-GB": "Content Search for Elasticsearch"
    },
    "description": {
      "de-DE": "Content Search mit Elasticsearch",
      "en-GB": "Content Search for Elasticsearch"
    },
    "manufacturerLink": {
      "de-DE": "https://store.shopware.com/signundsinn.html",
      "en-GB": "https://store.shopware.com/en/signundsinn.html"
    },
    "supportLink": {
      "de-DE": "https://signundsinn.de/kontakt/",
      "en-GB": "https://signundsinn.de/kontakt/"
    }
  },
  "autoload": {
    "psr-4": {
      "Sisi\\SisiEsContentSearch6\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sisi\\SisiEsContentSearch6\\Tests\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
        ".gitlab",
        "bin",
        "store",
        "tests",
        ".env",
        ".gitlab-ci.yml",
        ".sasslint.yml",
        "cypress.json",
        "DEPLOYMENT.MD",
        "e2e-test.txt",
        "gulpfile.js",
        "package.json",
        "psalm.xml"
    ]
  },
  "repositories": [
      {
          "type": "composer",
          "url": "https://gitlab.signundsinn.de/api/v4/group/84/-/packages/composer/packages.json"
      }
  ],
  "config": {
      "gitlab-domains": [
          "gitlab.signundsinn.de"
      ]
  }
}
