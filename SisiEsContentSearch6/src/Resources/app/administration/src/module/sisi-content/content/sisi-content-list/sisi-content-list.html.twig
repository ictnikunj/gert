{% block sisi_fields_list %}
    <sw-page class="sisi-fields-list">

        {% block sisi_fields_list_smart_bar_actions %}

            <template slot="smart-bar-actions">

                <sw-button variant="primary" :routerLink="{ name: 'sisi.content.create' }">
                    {{ $t('sisi-content.list.new') }}
                </sw-button>
            </template>
        {% endblock %}


        <template slot="content">
            {% block sisi_fields_list_content %}
                <sw-entity-listing
                    v-if="fields"
                    :items="fields"
                    :repository="repository"
                    :showSelection="false"
                    :columns="teaserColumns"
                    detailRoute="sisi.content.detail"
                >
                </sw-entity-listing>
            {% endblock %}
        </template>


    </sw-page>
{% endblock %}
