{% block price_config %}
    <sw-page class="price-configuration">

        {% block price_header %}
            <template #smart-bar-header>
                <h2>
                    {{ $tc('sw-settings.index.title') }}
                    <sw-icon name="small-arrow-medium-right" small></sw-icon>
                    {{ $tc('priceconfiguration.name') }}
                </h2>
            </template>
        {% endblock %}

        {% block price_content %}
            <template #content>
                {% block price_content_card %}
                    <sw-card-view>
                        {% block price_content_card_channel_config %}
                            <sw-sales-channel-config v-model="config" ref="configComponent" domain="PriceTracking.settings">
                                {% block price_content_card_channel_config_sales_channel %}
                                    <template #select="{ onInput, selectedSalesChannelId }">
                                        {% block gr_content_card_channel_config_sales_channel_card %}
                                            <sw-card :title="$tc('priceconfiguration.name')">

                                                {% block price_content_card_channel_config_sales_channel_card_title %}
                                                    <sw-text-field label="Language ID"
                                                                   v-model="languageid">
                                                    </sw-text-field>

                                                    <sw-button @click="onImport()">
                                                        {{ $tc('priceconfiguration.buttonText') }}
                                                    </sw-button>
                                                {% endblock %}
                                            </sw-card>
                                        {% endblock %}
                                    </template>
                                {% endblock %}
                            </sw-sales-channel-config>
                        {% endblock %}
                    </sw-card-view>
                {% endblock %}
            </template>
        {% endblock %}

    </sw-page>
{% endblock %}
