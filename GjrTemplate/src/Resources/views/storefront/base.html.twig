                        <h3>{{context.salesChannel.customFields.custom_footer_section_1_title | trans}}</h3>
                       <div class="part-one">
                        {{context.salesChannel.customFields.custom_footer_section_1_text | raw }}
                       </div>
                   </div>
                   <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 product-line">
                        <h3>{{context.salesChannel.customFields.custom_footer_section_2_title | trans}}</h3>
