                    </div>
                </div>
            </div>
        </div>
        
        <div class="container">
            {% sw_include '@Storefront/storefront/layout/footer/footer.html.twig' %}
        </div>
        {% endblock %}
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
    $('.product-box').hover(
        function () {
            var count = $(this).find( "a" ).find('img').length;
            if(count == 2){
                $(this).find( "a" ).find('img').eq(0).css('opacity', '0');
                $(this).find( "a" ).find('img').eq(1).css('opacity', '1');
            }
            }, 
        function () {
            var count = $(this).find( "a" ).find('img').length;
            if(count == 2){
                $(this).find( "a" ).find('img').eq(0).css('opacity', '1');
                $(this).find( "a" ).find('img').eq(1).css('opacity', '0');
            }
