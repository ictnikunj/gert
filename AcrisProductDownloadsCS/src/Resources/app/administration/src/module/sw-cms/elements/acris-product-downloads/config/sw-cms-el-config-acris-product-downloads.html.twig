            {% block sw_cms_element_acris_product_downloads_config_settings_padding_right %}
                <sw-select-field :label="$tc('acris-product-downloads.elements.general.config.label.spacingRight')"
                                 v-model="element.config.paddingRight.value">
                    <option
                        value="no">{{ $tc('acris-product-downloads.elements.general.config.label.optionSpacingNo') }}</option>
                    <option
                        value="pr-1">{{ $tc('acris-product-downloads.elements.general.config.label.optionSpacingSmall') }}</option>
                    <option
                        value="pr-2">{{ $tc('acris-product-downloads.elements.general.config.label.optionSpacingMediumSmall') }}</option>
                    <option
