        <sw-container columns="1fr 1fr" gap="15px">
            {% block sw_cms_element_acris_product_downloads_config_border_active %}
                <sw-switch-field
                    v-model="element.config.borderActive.value"
                    bordered
                    :label="$tc('acris-product-downloads.elements.general.config.label.borderActive')"
                />
            {% endblock %}

            {% block sw_cms_element_acris_product_downloads_config_border_color %}
                <sw-colorpicker v-model="element.config.borderColor.value"
                                :disabled="!element.config.borderActive.value"
                                :label="$tc('acris-product-downloads.elements.general.config.label.borderColor')"
                                colorOutput="hex" :zIndex="1100" :alpha="false">
                </sw-colorpicker>
            {% endblock %}

            {% block sw_cms_element_acris_product_downloads_config_border_size %}
                <sw-field type="number"
                          :disabled="!element.config.borderActive.value"
                          :label="$tc('acris-product-downloads.elements.general.config.label.borderSize')"
                          :min="0"
