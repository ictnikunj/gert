{% sw_extends '@Storefront/storefront/layout/header/header.html.twig' %}

{% block layout_top_bar %}{% endblock %}
{% block layout_header_navigation %}
    <div class="row align-items-center">
        <div class="col-md-4 d-none d-md-block">
            <div class="{% if theme_config('rhweb-header-activate-language-currency') %}d-flex{% else %}d-none{% endif %}">
                <div class="pr-2">
                    {% if  page.header.languages.count > 1 %}
                        {% sw_include '@Storefront/storefront/layout/header/actions/language-widget.html.twig' %}
                    {% else %}
                        {% for language in page.header.languages.elements  %}
                            {{ language.name }}
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="pl-2 rhweb-currencies-container">
                    {% if  page.header.currencies.count > 1 %}
                        {% sw_include '@Storefront/storefront/layout/header/actions/currency-widget.html.twig' %}
                    {% else %}
                        {% for currency in page.header.currencies.elements  %}
                            {{ currency.symbol }} {{ currency.name }}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 mb-4 mb-sm-0">
            <div class="text-center">
                {% sw_include '@Storefront/storefront/layout/header/logo.html.twig' %}
            </div>
        </div>
        <div class="col-md-4 col-sm-6">
            <div class="d-flex justify-content-center justify-content-sm-end header-icon-row">
                <div class="icon-container d-lg-none">
                    <a class="nav-main-toggle-btn header-actions-btn icon"
                       data-offcanvas-menu="true"
                       aria-label="{{ "general.menuLink"|trans|striptags }}">
                        <span aria-hidden="true" class="icon-menu icon"></span>
                    </a>
                </div>
                <div class="rhweb-search-icon icon-container">
                    {% if theme_config('rhweb-header-layout-header-search') %}
                        <a class="search-toggle-btn js-search-toggle-btn collapsed"
                             data-toggle="collapse"
                             data-target="#searchCollapse"
                             aria-expanded="false"
                             aria-controls="searchCollapse"
                             aria-label="{{ "header.searchButton"|trans|striptags }}">
                            <span aria-hidden="true" class="icon-magnifier icon"></span>
                        </a>
                    {% endif %}
                </div>
                <div class="rhweb-account-icon icon-container position-relative">
                    <a href="{{ path('frontend.account.home.page') }}" title="Account" class="account-menu-btn header-actions-btn">
                        <span aria-hidden="true" title="Account" class="icon-user icon"></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right account-menu-dropdown js-account-menu-dropdown"
                         aria-labelledby="accountWidget">
                        {% sw_include '@Storefront/storefront/layout/header/account-menu.html.twig' %}
                    </div>
                </div>

                {% if config('core.cart.wishlistEnabled') %}
                    <div class="rhweb-wishlist-icon icon-container position-relative">
                        <a class="header-wishlist-btn header-actions-btn"
                           href="{{ path('frontend.wishlist.page') }}"
                           title="{{ 'header.wishlist'|trans|striptags }}"
                           aria-label="{{ 'header.wishlist'|trans|striptags }}">
                            {% sw_include '@Storefront/storefront/layout/header/actions/wishlist-widget.html.twig' %}
                        </a>
                    </div>
                {% endif %}
                {% block layout_header_actions_cart %}
                    <div class="rhweb-bag-icon icon-container position-relative" data-offcanvas-cart="true">
                        <a href="{{ path('frontend.checkout.cart.page') }}"
                           data-cart-widget="true"
                           title="{{ 'checkout.cartTitle'|trans|striptags }}"
                           aria-label="{{ 'checkout.cartTitle'|trans|striptags }}"
                           class="header-cart-btn header-actions-btn">
                            {% sw_include '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}
                        </a>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
    {% if theme_config('rhweb-header-layout-header-search') %}
        {% sw_include '@Storefront/storefront/layout/header/search.html.twig' %}
    {% endif %}
{% endblock %}
