<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="PimImportCron\Service\ScheduledTask\ProductCronTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="PimImportCron\Service\ScheduledTask\ProductCronTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="product.repository"/>
            <argument type="service" id="language.repository"/>
            <argument type="service" id="product_manufacturer.repository"/>
            <argument type="service" id="tax.repository"/>
            <argument type="service" id="pim_product.repository"/>
            <argument type="service" id="product_cross_selling.repository"/>
            <argument type="service" id="media.repository"/>
            <argument type="service" id="product_media.repository"/>
            <argument type="service" id="Shopware\Core\Content\Media\MediaService" />
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver" />
            <argument type="service" id="sales_channel.repository" />
            <argument type="service" id="product_visibility.repository" />
            <argument type="service" id="property_group_option.repository" />
            <argument type="service" id="acris_product_download.repository" />
            <argument type="service" id="ict_media_redirect.repository" />
            <argument type="service" id="media_folder.repository" />
            <argument type="service" id="snippet.repository" />
            <argument type="service" id="snippet_set.repository" />
            <argument type="service" id="product_property.repository" />
            <argument type="service" id="media_thumbnail_size.repository" />
            <argument type="service" id="property_group.repository"/>
            <argument type="service" id="pim_category.repository"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="PimImportCron\Service\ScheduledTask\AddonProductCronTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="PimImportCron\Service\ScheduledTask\AddonProductCronTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="product.repository"/>
            <argument type="service" id="pim_product.repository"/>
            <argument type="service" id="product_cross_selling_assigned_products.repository"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="PimImportCron\Service\ScheduledTask\RelatedCronTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="PimImportCron\Service\ScheduledTask\RelatedCronTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="product.repository"/>
            <argument type="service" id="pim_product.repository"/>
            <argument type="service" id="product_cross_selling_assigned_products.repository"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="PimImportCron\Service\ScheduledTask\SubProductCronTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="PimImportCron\Service\ScheduledTask\SubProductCronTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="product.repository"/>
            <argument type="service" id="pim_product.repository"/>
            <argument type="service" id="product_cross_selling_assigned_products.repository"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="PimImportCron\Service\ScheduledTask\ProductPropertyCronTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="PimImportCron\Service\ScheduledTask\ProductPropertyCronTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="language.repository"/>
            <argument type="service" id="property_group.repository"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="property_group_option.repository"/>
            <argument type="service" id="product_property.repository" />
            <tag name="messenger.message_handler" />
        </service>

        <service id="PimImportCron\Service\ScheduledTask\PropertyCronTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="PimImportCron\Service\ScheduledTask\PropertyCronTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="language.repository"/>
            <argument type="service" id="property_group.repository"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="PimImportCron\Service\ScheduledTask\MediaRedirectCronTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="PimImportCron\Service\ScheduledTask\MediaRedirectTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="ict_media_redirect.repository" />
            <argument type="service" id="acris_product_download.repository" />
            <tag name="messenger.message_handler" />
        </service>

    </services>
</container>

