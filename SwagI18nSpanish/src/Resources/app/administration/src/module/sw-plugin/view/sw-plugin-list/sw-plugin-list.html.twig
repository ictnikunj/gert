{% block sw_plugin_list_grid_columns_label_label %}
    {% parent %}

    <sw-alert v-if="item.composerName === 'swag/i18n-spanish'"
              class="swag-i18n__plugin-deprecation-alert"
              variant="warning">
        {{ $tc('swag-i18n.deprecationAlert') }}

        <a class="swag-i18n__plugin-deprecation-alert-link"
           :href="$tc('swag-i18n.readMoreLink')"
           target="_blank">
            {{ $tc('swag-i18n.readMore') }}
        </a>

        <template #customIcon>
            <sw-icon class="sw-alert__icon swag-i18n__plugin-deprecation-alert-icon"
                     name="default-badge-warning"
                     size="12px"
                     decorative>
            </sw-icon>
        </template>
    </sw-alert>
{% endblock %}
