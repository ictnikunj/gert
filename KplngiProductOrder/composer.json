{
    "name": "kplngi/product-order",
    "description": "Set productorder for categories",
    "version": "1.5.8",
    "type": "shopware-platform-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Kiplingi",
            "homepage": "https://www.kiplingi.de"
        }
