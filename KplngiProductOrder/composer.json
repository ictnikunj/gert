    "require": {
        "shopware/core": "~6.4"
    },
    "autoload": {
        "psr-4": {
            "Kplngi\\ProductOrder\\": "src/"
        }
    },
    "extra": {
        "shopware-plugin-class": "Kplngi\\ProductOrder\\KplngiProductOrder",
