        "manufacturerLink": {
            "de-DE": "https://www.kiplingi.de",
            "en-GB": "https://www.kiplingi.de"
        },
        "supportLink": {
            "de-DE": "https://www.kiplingi.de",
            "en-GB": "https://www.kiplingi.de"
        }
