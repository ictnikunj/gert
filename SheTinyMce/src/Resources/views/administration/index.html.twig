{% sw_extends '@Administration/administration/index.html.twig' %}

{% block administration_templates %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/shetinymce/administration/css/she-tiny-mce.css') }}">

    {% if sheTinyMce.config.apiKey %}
        <script nonce="{{ cspNonce }}"
                src="https://cdn.tiny.cloud/1/{{ sheTinyMce.config.apiKey }}/tinymce/5/tinymce.min.js">
        </script>
    {% else %}
        <script nonce="{{ cspNonce }}"
                type="text/javascript"
                src="{{ asset('bundles/shetinymce/tinymce/tinymce.min.js') }}">
        </script>
    {% endif %}

    <script nonce="{{ cspNonce }}">
      let tinymceConfig = {{ sheTinyMce.config|json_encode|raw }};
    </script>
{% endblock %}
